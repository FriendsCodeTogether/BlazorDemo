@page "/"
@using BlazorDemoML.Model
@using System.IO

<h3>Upload PNG images</h3>

<p>
    <InputFile OnChange="@OnInputFileChange" multiple />
</p>

@if (imageDataUrls.Count > 0)
{
    <h4>Images</h4>

    <div class="card" style="width:30rem;">
        <div class="card-body">
            @foreach (var imageDataUrl in imageDataUrls)
            {
                <img class="rounded m-1" src="@imageDataUrl" />
            }
        </div>
    </div>

    <div>
        @result.Prediction
    </div>

    <div>
        @foreach (var score in result.Score)
        {
            <p>@score</p>
        }
    </div>
}

@code {
    IList<string> imageDataUrls = new List<string>();
    List<ModelOutput> results = new();
    ModelOutput result;

    private async Task OnInputFileChange(InputFileChangeEventArgs e)
    {
        var maxAllowedFiles = 3;
        var format = "image/jpg";

        foreach (var imageFile in e.GetMultipleFiles(maxAllowedFiles))
        {
            var resizedImageFile = await imageFile.RequestImageFileAsync(format,
                100, 100);
            var buffer = new byte[resizedImageFile.Size];
            await resizedImageFile.OpenReadStream().ReadAsync(buffer);
            var imageDataUrl =
                $"data:{format};base64,{Convert.ToBase64String(buffer)}";
            imageDataUrls.Add(imageDataUrl);

            File.WriteAllBytes("D://repos/BlazorDemo/temp.jpg", buffer);
        }

        var service = new FlowerRecognitionService();
        var pictureUrl = imageDataUrls.FirstOrDefault();

        result = await service.GetFlowerNameAsync("D://repos/BlazorDemo/temp.jpg");
    }
}
