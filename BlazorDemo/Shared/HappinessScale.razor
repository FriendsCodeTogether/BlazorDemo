<div class="sentiment">
    <h4>Your sentiment is...</h4>
    <p>😡🙁😐😃😍</p>

    <div class="marker">
        <div style="left: @Value.ToString("N0")%;">
            <div>▲</div>
            <label>@Value.ToString("N0")%</label>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public float Value { get; set; }
}
